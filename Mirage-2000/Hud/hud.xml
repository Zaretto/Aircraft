<?xml version="1.0" encoding="iso-8859-1"?>

<!-- http://wiki.flightgear.org/Head-up_display
     http://wiki.flightgear.org/Canvas_HUD

     changelog

       19/07/2015 Updated by Hardball : added new indicators
-->
<PropertyList>

  <enable3d>true</enable3d>
  
  <ladder>
    <name>Pitch Ladder</name>
    <type>pitch</type>
    <x>-25</x>
    <y>-25</y>
    <width>50</width>
    <height>50</height>
    <roll-input>
      <property>/orientation/roll-deg</property>
    </roll-input>
    <pitch-input>
      <property>/orientation/pitch-deg</property>
    </pitch-input>
    <compression-factor>11.50</compression-factor>
    <display-span>10</display-span>
    <divisions>5.0</divisions>
    <screen-hole>6</screen-hole>
    <tick-length>2</tick-length>
    <zero-bar-overlength>15</zero-bar-overlength>
    <enable-dive-bar-angle>true</enable-dive-bar-angle>
    <enable-dynamic-origin>false</enable-dynamic-origin>
    <enable-fuselage-ref-line>true</enable-fuselage-ref-line>
    <enable-target-spot>false</enable-target-spot>
    <enable-target-markers>true</enable-target-markers>
    <enable-velocity-vector>true</enable-velocity-vector>
    <enable-drift-marker>false</enable-drift-marker>
    <enable-alpha-bracket>false</enable-alpha-bracket>
    <enable-energy-marker>false</enable-energy-marker>
    <enable-climb-dive-marker>false</enable-climb-dive-marker>
    <enable-glide-slope-marker>true</enable-glide-slope-marker>
    <glide-slope>0.0</glide-slope>
    <enable-energy-worm>false</enable-energy-worm>
    <enable-waypoint-marker>true</enable-waypoint-marker>
    <enable-zenith>false</enable-zenith>
    <enable-nadir>true</enable-nadir>
  </ladder>

  <turn-bank-indicator>
    <name>Turn Indicator</name>
    <x>-50</x>
    <y>-75</y>
    <width>100</width>
    <height>100</height>
    <bank-input>
      <property>/orientation/roll-deg</property>
    </bank-input>
    <sideslip-input>
      <property>/orientation/side-slip-deg</property>
    </sideslip-input>
    <bank-scale>true</bank-scale>
    <option>bottom</option>
  </turn-bank-indicator>

  <label>
    <name>Gyro Heading Label</name>
    <x>-9</x>
    <y>42</y>
    <width>18</width>
    <height>8</height>
    <input>
      <property>instrumentation/mfd/heading-displayed</property>
    </input>
    <format>%3.0f</format>
    <halign>center</halign>
    <box>true</box>
    <option>top</option>
  </label>

  <tape>
    <name>GyrocompassTrue</name>  
    <input>
      <property>instrumentation/mfd/heading-displayed</property>
      <factor>0.1</factor>
    </input>
    <x>-40</x>
    <y>50</y>
    <width>80</width>
    <height>10</height>
    <display-span>4.0</display-span>
    <modulo>36</modulo>
    <option>top</option>
    <label-gap-width>10</label-gap-width>
    <major-divisions>1.0</major-divisions>
    <minor-divisions>0.5</minor-divisions>
    <tick-bottom>false</tick-bottom>
    <tick-top>false</tick-top>
    <tick-right>false</tick-right>
    <tick-left>false</tick-left>
    <cap-bottom>false</cap-bottom>
    <cap-top>false</cap-top>
    <cap-right>false</cap-right>
    <cap-left>false</cap-left>
    <marker-offset>1.0</marker-offset>
    <enable-pointer>false</enable-pointer>
    <pointer-type>fixed</pointer-type>
    <tick-type>line</tick-type>
    <tick-length>variable</tick-length>
  </tape>

  <label>
    <name>KIAS</name>
    <x>-59</x>
    <y>24</y>
    <width>30</width>
    <height>8</height>
    <input>
      <property>/velocities/airspeed-kt</property>
    </input>
    <format>%4.0fkt</format>
    <halign>left</halign>
    <box>false</box>
  </label>

  <label>
    <name>MACH Number</name>
    <x>-58</x>
    <y>20</y>
    <width>1</width>
    <height>1</height>
    <condition>
      <greater-than>
        <property>/velocities/mach</property>
        <value>0.70</value>
      </greater-than>
    </condition>
    <input>
      <property>/velocities/mach</property>
    </input>
    <format>%4.2f</format>
    <halign>left</halign>
  </label>

  <label>
    <name>Altitude</name>
    <x>39</x>
    <y>24</y>
    <width>18</width>
    <height>12</height>
    <input>
      <property>instrumentation/altimeter/indicated-altitude-ft</property>
    </input>
    <format>%6.0fft</format>
    <halign>right</halign>
    <box>false</box>
    <option>left</option>
  </label>

  <label>
    <name>flight level</name>
    <x>39</x>
    <y>16</y>
    <width>18</width>
    <height>12</height>
    <condition>
      <greater-than>
        <property>instrumentation/altimeter/indicated-altitude-ft</property>
        <value>20000</value>
      </greater-than>
    </condition>
    <input>
      <property>instrumentation/altimeter/indicated-altitude-ft</property>
      <factor>0.01</factor>
    </input>
    <format>FL %3.0f</format>
    <halign>right</halign>
    <box>false</box>
    <option>left</option>
  </label>

  <label>
    <name>elevationOk</name>
    <x>34</x>
    <y>-75</y>
    <condition>
      <less-than>
        <property>/position/altitude-agl-ft</property>
        <value>5000</value>
      </less-than>
    </condition>
    <halign>left</halign>
    <format>%5.0f</format>
    <input>
      <property>/position/altitude-agl-ft</property>
    </input>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ range -->
  <label>
    <name>Closest Range</name>
    <x>-58</x>
    <y>-20</y>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <halign>left</halign>
    <format>%2.2fnm</format>
    <input>
      <property>/ai/closest/range</property>
    </input>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ Callsign -->
  <label>
    <name>Closest Callsign</name>
    <x>-58</x>
    <y>-12</y>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/callsign</property>
    </input>
    <format>%s</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ altitude -->
  <label>
    <name>Closest Altitude</name>
    <x>-58</x>
    <y>-28</y>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/altitude</property>
    </input>
    <format>%1.0fft</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ heading -->
  <label>
    <name>Closest heading</name>
    <x>-58</x>
    <y>-36</y>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/heading</property>
    </input>
    <format>%1.0f'</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ speed -->
  <label>
    <name>Closest speed</name>
    <x>-58</x>
    <y>-44</y>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/speed</property>
    </input>
    <format>%1.0fkts</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ bearing -->
  <label>
    <name>Closest bearing</name>
    <x>-58</x>
    <y>-52</y>
    <condition>
      <and>
        <less-than>
          <property>/ai/closest/range</property>
          <property>instrumentation/radar/range</property>
        </less-than>
        <greater-than>
          <property>/ai/closest/range</property>
          <value>0</value>
        </greater-than>
      </and>
    </condition>
    <input>
      <property>/ai/closest/bearing</property>
    </input>
    <format>at %1.0f'</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ angle of attack -->
  <label>
    <name>AoA</name>
    <x>55</x>
    <y>10</y>
    <condition>
      <or>
        <greater-than>
          <property>/orientation/alpha-deg</property>
          <value>2.0</value>
        </greater-than>
        <and>
          <property>/controls/gear/gear-down</property>
          <greater-than>
            <property>/orientation/alpha-deg</property>
            <value>-1.0</value>
          </greater-than>
        </and>
      </or>
    </condition>
    <width>1</width>
    <height>1</height>
    <halign>right</halign>
    <format>AoA %3.1f</format>
    <input>
      <property>/orientation/alpha-deg</property>
    </input>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ engine off -->
  <label>
    <name>off</name>
    <x>0</x>
    <y>-30</y>
    <width>1</width>
    <height>1</height>
    <condition>
      <property>/controls/engines/engine[0]/cutoff</property>
    </condition>
    <format>off</format>
    <halign>center</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ engine starting -->
  <label>
    <name>Starting</name>
    <x>0</x>
    <y>-30</y>
    <width>1</width>
    <height>1</height>
    <condition>
      <property>/controls/engines/engine[0]/starter</property>
    </condition>
    <format>Starting</format>
    <halign>center</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ electronic counter measure -->
  <label>
    <name>ECM</name>
    <x>-10</x>
    <y>-66</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <property>/instrumentation/ecm/on-off</property>
    </condition>
    <format>ecm</format>
    <halign>center</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ gears -->
  <label>
    <name>Gear</name>
    <x>-56</x>
    <y>-70</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <property>/controls/gear/gear-down</property>
    </condition>
    <format>gears</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ parking brake -->
  <label>
    <name>Parking Break</name>
    <x>-56</x>
    <y>-62</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <property>/controls/gear/brake-parking</property>
    </condition>
    <format>brakes</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ G load -->
  <label>
    <name>G Load</name>
    <x>-60</x>
    <y>45</y>
    <width>1.5</width>
    <height>1.5</height>
    <input>
      <property>/accelerations/pilot/z-accel-fps_sec</property>
      <factor>-0.03108095</factor>
      <damp>1.0</damp>
    </input>
    <format>%2.1fg</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ stall alert -->
  <label>
    <name>StallAlert</name>
    <x>-35</x>
    <y>-10</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <equals>
        <property>/sim/alarms/stall-warning</property>
        <value>2</value>
      </equals>
    </condition>
    <format>STALL ALERT !</format>
    <blinking>
      <interval>0.1</interval>
    </blinking>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ stall warning -->
  <label>
    <name>StallWarning</name>
    <x>-40</x>
    <y>-10</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <equals>
        <property>/sim/alarms/stall-warning</property>
        <value>1</value>
      </equals>
    </condition>
    <format>STALL WARNING !</format>
    <blinking>
      <interval>0.25</interval>
    </blinking>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ altitude to low -->
  <label>
    <name>elevationWarn</name>
    <x>0</x>
    <y>0</y>
    <condition>
      <and>
        <equals>
          <property>/controls/gear/gear-down</property>
          <value>false</value>
        </equals>
        <less-than>
          <property>/position/altitude-agl-ft</property>
          <value>300</value>
        </less-than>
        <less-than>
          <property>/instrumentation/vertical-speed-indicator/indicated-speed-kts</property>
          <value>0</value>
        </less-than>
      </and>
    </condition>
    <halign>center</halign>
    <format>PULL UP ! %5.0fft</format>
    <input>
      <property>/position/altitude-agl-ft</property>
    </input>
    <blinking>
      <interval>0.25</interval>
    </blinking>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ guns -->
  <label>
    <name>Guns</name>
    <x>-58</x>
    <y>-80</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <and>
        <property>controls/armament/master-arm</property>
        <equals>
          <property>controls/armament/name</property>
          <value>30mm Cannon</value>
        </equals>
      </and>
    </condition>

    <input>
      <property>ai/submodels/submodel/count</property>
    </input>
    <format>guns:%3.0f</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ missiles aa -->
  <label>
    <name>Missiles</name>
    <x>-58</x>
    <y>-80</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <and>
        <property>controls/armament/master-arm</property>
        <not><equals>    
          <property>controls/armament/name</property>
          <value>30mm Cannon</value>
        </equals></not>
      </and>
    </condition>
    <input>
      <property>controls/armament/name</property>
    </input>
    <format>%s</format>
    <halign>left</halign>
  </label>

  <!-- ~~~~~~~~~~~~~~~~~~ missiles ag -->
<!--  <label>
    <name>Missiles ag</name>
    <x>-58</x>
    <y>-80</y>
    <width>15</width>
    <height>6</height>
    <condition>
      <equals>
        <property>controls/armament/stick-selector</property>
        <value>3</value>
      </equals>
    </condition>
    <format>A/G</format>
    <halign>left</halign>
  </label>-->

  <aiming-reticle>
    <x>-20</x>
    <y>-19</y>
    <width>40</width>
    <!-- defines the diameter of the constant/inner circle -->
    <height>40</height>
    <active-condition>
      <property>/sim/aim/active</property>
    </active-condition>
    <!-- defines the diameter of the adjustable/outer circle -->
    <!--<diameter-input>50</diameter-input> -->
    <!-- The aiming reticule under is for gun-->
  </aiming-reticle>

  <aiming-reticle>

    <condition>
      <equals>
        <property>/sim/current-view/name</property>
        <value>Cockpit View</value>
      </equals>
      <property>/sim/aim/tachy</property>
    </condition>

    <active-condition>
      <property>/sim/aim/active</property>
    </active-condition>

    <tachy-condition>
      <property>/sim/aim/tachy</property>
    </tachy-condition>

    <align-condition>
      <property>/sim/aim/align</property>
    </align-condition>

    <yaw-input>
      <property>/orientation/yaw-rate-degps</property>
      <factor>-1.0</factor>
      <damp>2.0</damp>
    </yaw-input>

    <pitch-input>
      <property>/orientation/pitch-rate-degps</property>
      <factor>-1.0</factor>
      <damp>2.0</damp>
    </pitch-input>

    <offset-x-input>
      <property>/sim/aim/offsets/x</property>
    </offset-x-input>

    <offset-y-input>
      <property>/sim/aim/offsets/y</property>
    </offset-y-input>

    <speed-input>
      <property>/sim/aim/speed-fps</property>
      <!--In feet /s ... 1 yard = 3 feet and 1 nm = 2025 yards (and 1000 meters = 1 km)-->
    </speed-input>

    <range-input>
      <property>/sim/aim/range-yds</property>
      <!-- In Yard... -->
    </range-input>

    <!-- defines the diameter and length of the adjustable outer arc -->
    <diameter-input>
      <property>/sim/aim/radius</property>
    </diameter-input>

    <arc-start-input>
      <property>/sim/aim/arc/start-deg</property>
    </arc-start-input>

    <arc-stop-input>
      <property>/sim/aim/arc/stop-deg</property>
    </arc-stop-input>

    <x>-9</x>
    <y>-15</y>
    <width>15</width>
    <height>15</height>
    <compression-factor>10</compression-factor>
    <limit-x>80</limit-x>
    <limit-y>40</limit-y>
  </aiming-reticle>

</PropertyList>
